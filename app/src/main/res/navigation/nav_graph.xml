<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/githubLoginFragment">

    <fragment
        android:id="@+id/githubLoginFragment"
        android:name="com.noti0ns.githubrepolist.ui.login.GithubLoginFragment"
        android:label="fragment_github_login"
        tools:layout="@layout/fragment_github_login" >
        <action
            android:id="@+id/action_githubLoginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.noti0ns.githubrepolist.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
</navigation>